@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SemestrProjectUI.Models.OutputResponse
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePath</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="CreatePath" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="StarterPath">Starter Path:</label>
                    <input class="form-control" asp-for="StarterPath" />
                </div>
                <div class="form-group">
                    <label asp-for="DestinationPath">Destination folder:</label>
                    <input class="form-control" asp-for="DestinationPath" />
                </div>
                <div class="form-group">
                    <label asp-for="AnswerName">Name of answer:</label>
                    <input class="form-control" asp-for="AnswerName" />
                </div>
                <div class="form-group">
                    <label>What output format you want?</label>
                    <select class="form-control" asp-for="fileFormat">
                        <option value="">Choose an option</option>
                        <option value="0">XML</option>
                        <option value="1">TXT</option>
                        <option value="2">JSON</option>
                    </select>
                    <label>Do you want to encrypt it or compress it?</label>
                    <select class="form-control" asp-for="fileFormat">
                        <option value="">Choose an option</option>
                        <option value="0">None</option>
                        <option value="1">Only encrypted</option>
                        <option value="2">only ziped</option>
                        <option value="3">first zip, then enc</option>
                        <option value="4">first enc, then zip</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit response
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>